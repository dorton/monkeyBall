<%= simple_form_for @monkey, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.association :school, label_method: :city, value_method: :id, include_blank: false, label: 'Campus' %>
  <%= f.association :cohort, label_method: :name, value_method: :id %>
  <%= f.association :start_date, label_method: :start_date, value_method: :id %>

  <%= f.button :submit, :class => 'btn-primary' %>


<% end %>
